body {
    font-family: "Georgia", serif;
    background-color: #fff9d6;
}

#tagline {
    font-weight: normal;
    letter-spacing: 0.7em;
    font-size: 32px;
}

h1 {
    margin-bottom: 10px;
}

h1 span.subtitle {
    display: none;
}

.slim #header h1 {
    letter-spacing: normal;
}

#logo {
    height: 32px;
    width: 42px;
    float: left;
    margin-top: 20px;
    margin-right: 10px;
    background: url(checkout-logo.png) left center no-repeat;
}

#thumbs img.images {
    display: none;
}

.slim #thumbs td {
    width: 100%;
    display: inline-block;
}

#thumbs td div {
    display: none;
}

#thumbs h3 {
    font-size: 12px;
    color: #817560;
    font-weight: normal;
}

#thumbs span {
    font-size: 11px;
    color: #e48710;
}

#container.slim #header,
#header {
    background-image: none;
}

#shipping-same {
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    background-color: #fff5bd;
    border-color: #ffed8a;
}

#buttons {
    border-width: 1px;
    border-style: solid;
}

#email,
#addresses,
#buttons,
#payment,
#payment-method,
#newsletter,
.group {
    background-color: #fffbe5;
    border-color: #efeba5;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
}

#container.slim #main,
#main {
    background-image: none;
    background-color: white;
    padding: 0;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    border: 1px solid #333;
}

#overview {
    background: none;
    -webkit-border-top-left-radius: 3px;
    -webkit-border-top-right-radius: 3px;
    -moz-border-radius-topleft: 3px;
    -moz-border-radius-topright: 3px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
}

#container.slim #footer,
#footer {
    background-image: none;
}

label:after {
  content: '*';
  padding-left: 3px;
  display: inline;
  color: red;
}

label[for=shipping-toggle]:after,
label[for=billing_address_address1]:after,
label[for=shipping_address_address1]:after,
#payment-methods label:after {
    content: "";
}

#overview .hint {
    font-size: 100%;
}

#buttons input {
    font-family: "Georgia";
}

#buttons a {
    font-size: 120%;
}
